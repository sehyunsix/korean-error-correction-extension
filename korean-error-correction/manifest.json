{
  "manifest_version": 3,
  "name": "한글 맞춤법 검사기",
  "version": "5.0.0",
  "version_name": "5.0.0 - Grammarly 스타일 UI 리디자인",
  "description": "선택한 텍스트를 Gemini AI로 검사하고 자동 교정하는 맞춤법 검사기 (Cmd+Shift+E)",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "commands": {
    "check-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "선택한 텍스트 맞춤법 검사"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "modules/config.js",
        "modules/storage.js",
        "modules/text-utils.js",
        "modules/gemini-api.js",
        "modules/ui-highlight.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

